@{
    ViewBag.Title = "Product";
}
@model KillerApp.Models.Product
<section id="single-product">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-7">
                <div class="product-images">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                        </ol>
                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="../../Images/laptop.jpg" alt="...">
                            </div>
                            <div class="item">
                                <img src="../../Images/laptop1.jpg" alt="...">
                            </div>
                            <div class="item">
                                <img src="../../Images/laptop2.jpeg" alt="...">
                            </div>
                        </div>
                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-5">
                <div class="product-info">
                    <h4>@Html.DisplayFor(model => model.Naam)</h4>
                    <p>
                        @Html.DisplayFor(model => model.Omschrijving)
                    </p>
                    <div class="product-specs">
                        <div class="info">
                            <p><i class="glyphicon glyphicon-tag"></i><span>Price: &euro;@Html.DisplayFor(model => model.Prijs)</span></p>
                        </div>
                        <div class="info">
                            <p><i class="glyphicon glyphicon-heart-empty"></i><span>Category: <a href="#"> @Html.DisplayFor(model => model.Categorie.Naam)</a></span></p>
                        </div>
                        <div class="info">
                            <p><i class="glyphicon glyphicon-menu-hamburger"></i><span>SKU: @Html.DisplayFor(model => model.Id)</span></p>
                        </div>
                        <div class="info">
                            <p><i class="glyphicon glyphicon-star-empty"></i><span>Reviews: <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star-empty"></i></span></p>
                        </div>
                    </div>
                    <div class="buy-product">
                        <div class="options qty aantal">
                            <input step="1" min="0" name="cart" value="1" title="Qty" class="qty" text="" size="4" type="number" max="99">
                        </div>

                        <a href="#" class="btn btn-primary btn-cart-a-orange"><i class="glyphicon glyphicon-shopping-cart menu-icon-cart"></i><span> Add to Cart</span></a>
                        <a href="#" class="btn btn-success btn-cart-a"><i class="glyphicon glyphicon-heart-empty"></i><span> Buy Now</span></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-7 col-sm-6">
                <ul class="product-info-tabs nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#product-features-tab-discription">Discription</a>
                    </li>

                    <li class="">
                        <a data-toggle="tab" href="#product-content-info">product info</a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#product-content-review">reviews</a>
                    </li>
                </ul>
                <div class="product-information-content">
                    <div class="tab-content">
                        <div id="product-features-tab-discription" class="tab-pane fade in active">
                            <div class="row">
                                <div class="col-md-12">
                                    <h4>Lorem ipsum</h4>
                                </div>
                            </div>
                        </div>

                        <div id="product-content-info" class="tab-pane fade in">
                            <div class="row">
                                <div class="col-sm-6">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <th>Sizes:</th>
                                                <td>Small, Medium, Large</td>
                                            </tr>
                                            <tr>
                                                <th>Colors:</th>
                                                <td>Beige, Black, Blue</td>
                                            </tr>
                                            <tr>
                                                <th>Fabric:</th>
                                                <td>100% Cotton</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-sm-6">
                                    <table>
                                        <tbody>
                                            <tr>
                                                <th>Weight:</th>
                                                <td>0.5 Kg</td>
                                            </tr>
                                            <tr>
                                                <th>Made In:</th>
                                                <td>USA</td>
                                            </tr>
                                            <tr>
                                                <th>More Info:</th>
                                                <td>Lorem ipsum.</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div id="product-content-review" class="tab-pane fade in">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="review-content">
                                        <h4 class="review-titel">Amazing product!</h4>
                                        <div class="review-stars">
                                            <span class="product-rating">
                                                <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i>
                                            </span>
                                        </div>
                                        <p>
                                            Bacon ipsum dolor amet bresaola shoulder kevin,
                                            chuck beef burgdoggen pork alcatra prosciutto turkey salami.
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="review-content">
                                        <h4 class="review-titel">Amazing product!</h4>
                                        <div class="review-stars">
                                            <span class="product-rating">
                                                <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i> <i class="glyphicon glyphicon-star"></i>
                                            </span>
                                        </div>
                                        <p>
                                            Bacon ipsum dolor amet bresaola shoulder kevin,
                                            chuck beef burgdoggen pork alcatra prosciutto turkey salami.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5 col-sm-6">

                <form class="review-form" datatoggle="validator">
                    <h4>Review</h4>
                    <div class="form-group">
                        <input id="titel" class="form-control" type="text" placeholder="TITLE" />
                    </div>
                    <div class="form-group">
                        <select class="form-control">
                            <option>5 STARS</option>
                            <option>4 STARS</option>
                            <option>3 STARS</option>
                            <option>2 STARS</option>
                            <option>1 STAR</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="omschrijving" rows="5" placeholder="MESSAGE"></textarea>
                    </div>
                    <button id="form-submit" class="btn btn-default btn-send" type="submit"><i class="glyphicon glyphicon-envelope"></i>SEND</button>
                </form>
            </div>
        </div>
    </div>
</section>