
@{
    ViewBag.Title = "KlantEdit";
    var beheerder = ViewData["beheerder"] as Beheerder;
}

@using KillerApp.Models
@model KillerApp.Models.Klant
<section id="info-klant">
    <div class="container">
        <div class="row">
            <div class="col-md-12 titel-info">
                <h2>customer Info</h2>
            </div>
            <div class="col-md-4 klant-info">
                @if (beheerder != null)
                {
                    <p>Naam : @beheerder.Naam</p>
                    <p>Account number : @beheerder.Id</p>
                }
                
                <a href="@Url.Action("Beheerder", "Account")">Back</a>
                <p><a href="@Url.Action("Delete", "Klant", new {id = Model.Id})">Delete</a></p>
            </div>
            <div class="col-md-8 update-info">
                @using (Html.BeginForm("Update", "Klant", new {id = Model.Id}, FormMethod.Post))
                {
                    <p>Naam:</p>
                    <div class="form-group">
                        <input id="naam" name="naam" type="text" class="form-control" value="@Html.DisplayFor(model => model.Naam)" />
                    </div>
                    <p>E-mail:</p>
                    <div class="form-group">
                        <input id="mail" name="email" type="email" class="form-control" value="@Html.DisplayFor(model => model.Email)" />
                    </div>
                    <p>Wachtwoord:</p>
                    <div class="form-group">
                        <input readonly="readonly" id="wachtwoord" name="wachtwoord" type="password" class="form-control" value="@Html.DisplayFor(model => model.Wachtwoord)" />
                    </div>
                    <p>Straat:</p>
                    <div class="form-group">
                        <input id="straat" name="straat" type="text" class="form-control" value="@Html.DisplayFor(model => model.Straat)" />
                    </div>
                    <p>Huis nummer:</p>
                    <div class="form-group">
                        <input id="huisnr" name="huisnr" type="text" class="form-control" value="@Html.DisplayFor(model => model.HuisNr)" />
                    </div>
                    <p>Postcode:</p>
                    <div class="form-group">
                        <input id="postcode" name="postcode" type="text" class="form-control" value="@Html.DisplayFor(model => model.Postcode)" />
                    </div>
                    <p>Woonplaats:</p>
                    <div class="form-group">
                        <input id="woonplaats" name="woonplaats" type="text" class="form-control" value="@Html.DisplayFor(model => model.Woonplaats)" />
                    </div>
                    <p>Land:</p>
                    <div class="form-group">
                        <input id="land" name="land" type="text" class="form-control" value="@Html.DisplayFor(model => model.Land)" />
                    </div>
                    <button id="form-submit" class="btn btn-default btn-send" type="submit">Save</button>

                }
            </div>
        </div>
    </div>
</section>

