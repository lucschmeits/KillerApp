@{
    ViewBag.Title = "Account";
}

<div class="header-banner">
    <img src="../../Images/account.jpeg" class="img-responsive" alt="banner" />
</div>

<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="login-form">
                    <h3>Login</h3>
                    <div class="form-group">
                        <input id="email" class="form-control" placeholder="EMAIL" type="email" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="password" class="form-control" placeholder="PASSWORD" type="password" required data-error="*Please fill out this field" />
                    </div>
                    <button id="login-submit" class="btn btn-default btn-send" type="submit">Log in</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="register-form">
                    <h3>Register</h3>
                    <div class="form-group">
                        <input id="naam-r" class="form-control" placeholder="NAME" type="text" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="email-r" class="form-control" placeholder="EMAIL" type="email" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="password-r" class="form-control" placeholder="PASSWORD" type="password" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="straat-r" class="form-control" placeholder="STREET" type="text" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="nr-r" class="form-control" placeholder="NUMBER" type="number" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="postcode-r" class="form-control" placeholder="POSTAL" type="text" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="woonplaats-r" class="form-control" placeholder="RESIDENCE" type="text" required data-error="*Please fill out this field" />
                    </div>
                    <div class="form-group">
                        <input id="land-r" class="form-control" placeholder="COUNTRY" type="text" required data-error="*Please fill out this field" />
                    </div>
                    <button id="register-submit" class="btn btn-default btn-send" type="submit">Register</button>
                </div>
            </div>
        </div>
    </div>
</section>