@using KillerApp.Models

@{
    ViewBag.Title = "LeverancierNew";
    var beheerder = ViewData["beheerder"] as Beheerder;
}

<section id="leverancierNew">
    <div class="container">
        <div class="row">
            <div class="col-md-12 leverancier-titel">
                <h2>Leverancier</h2>
            </div>
            <div class="col-md-2 personal-info">
                @if (beheerder != null)
                {
                    <p>Naam : @beheerder.Naam</p>
                    <p>Account Nr : @beheerder.Id</p>
                    <p><a href="@Url.Action("Beheerder", "Account")">Back</a></p>
                }

            </div>
            <div class="col-md-10 beheer-content">
             
                    @using (Html.BeginForm("Save", "Leverancier", FormMethod.Post))
                    {

                        <p>Leveranciers NR:</p>
                        <div class="form-group">
                            <input id="levNr" name="levNr" type="text" class="form-control" placeholder="Leverancier Nummer" />
                        </div>
                        <p>Telefoon NR:</p>
                        <div class="form-group">
                            <input id="telefoon" name="telNr" type="text" class="form-control" placeholder="Telefoonnummer" />
                        </div>
                        <p>Naam:</p>
                        <div class="form-group">
                            <input id="naam" name="naam" type="text" class="form-control" placeholder="Naam" />
                        </div>
                        <p>Plaats:</p>
                        <div class="form-group">
                            <input id="plaats" name="plaats" type="text" class="form-control" placeholder="Plaats" />
                        </div>
                        <p>Straat:</p>
                        <div class="form-group">
                            <input id="straat" name="straat" type="text" class="form-control" placeholder="Straat" />
                        </div>
                        <p>Huis NR:</p>
                        <div class="form-group">
                            <input id="huisNr" name="huisNr" type="text" class="form-control" placeholder="Huis Nummer" />
                        </div>
                        <p>Postcode:</p>
                        <div class="form-group">
                            <input id="postcode" name="postcode" type="text" class="form-control" placeholder="Postcode" />
                        </div>
                        <p>Land:</p>
                        <div class="form-group">
                            <input id="land" name="land" type="text" class="form-control" placeholder="Land" />
                        </div>
                        <button id="form-submit" class="btn btn-default btn-send" type="submit">Save</button>
                    }

                
            </div>
        </div>
    </div>
</section>



