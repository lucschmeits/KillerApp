@using KillerApp.Models

@{
    ViewBag.Title = "BeheerNew";
    var beheerder = ViewData["Beheerder"] as Beheerder;
}

<section id="leverancierId">
    <div class="container">
        <div class="row">
            <div class="col-md-12 leverancier-titel">
                <h2>Product</h2>
            </div>
            <div class="col-md-2 personal-info">
                @if (beheerder != null)
                {
                    <p>Naam : @beheerder.Naam</p>
                    <p>Account Nr : @beheerder.Id</p>
                    <p><a href="@Url.Action("Producten", "Beheer")">Back</a></p>
                    
                }

            </div>
            <div class="col-md-10 beheer-content">
               
                    @using (Html.BeginForm("Save", "Beheer", FormMethod.Post))
                    {

                        <p>Naam:</p>
                        <div class="form-group">
                            <input id="naam" name="naam" type="text" class="form-control" value="" />
                        </div>
                        <p>E-mail:</p>
                        <div class="form-group">
                            <input id="email" name="email" type="email" class="form-control" value="" />
                        </div>
                        <p>Wachtwoord:</p>
                        <div class="form-group">
                            <input id="wachtwoord" name="wachtwoord" type="password" class="form-control" value="" />
                        </div>
                        <button id="form-submit" class="btn btn-default btn-send" type="submit">Save</button>
                    }

                
            </div>
        </div>
    </div>
</section>


