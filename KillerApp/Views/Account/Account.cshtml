@{
    ViewBag.Title = "Account";
}

<div class="header-banner">
    <img src="../../Images/account.jpeg" class="img-responsive" alt="banner" />
</div>

<section id="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    <div class="login-form">
                        <h3>Login</h3>
                        <div class="form-group">
                           
                            <input id="email" name="email" class="form-control" placeholder="EMAIL" type="email" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="password" name="password" class="form-control" placeholder="PASSWORD" type="password" required data-error="*Please fill out this field" />
                        </div>
                        <button id="login-submit" class="btn btn-default btn-send" type="submit">Log in</button>
                    </div>
                }

              
                
              
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("Registreer", "Account"))
                {
                    <div class="register-form">
                        <h3>Register</h3>
                        <div class="form-group">
                            <input id="naam-r" name="naam-r" class="form-control" placeholder="NAME" type="text" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="email-r" name="email-r" class="form-control" placeholder="EMAIL" type="email" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="password-r" name="password-r" class="form-control" placeholder="PASSWORD" type="password" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="straat-r" name="straat-r" class="form-control" placeholder="STREET" type="text" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="nr-r" name="nr-r" class="form-control" placeholder="NUMBER" type="number" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="postcode-r" name="postcode-r" class="form-control" placeholder="POSTAL" type="text" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="woonplaats-r" name="woonplaats-r" class="form-control" placeholder="RESIDENCE" type="text" required data-error="*Please fill out this field" />
                        </div>
                        <div class="form-group">
                            <input id="land-r" name="land-r" class="form-control" placeholder="COUNTRY" type="text" required data-error="*Please fill out this field" />
                        </div>
                        <button id="register-submit" class="btn btn-default btn-send" type="submit">Register</button>
                    </div>
                }
              
            </div>
        </div>
    </div>
</section>